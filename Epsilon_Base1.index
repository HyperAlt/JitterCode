<!DOCTYPE html>
<html>
<head>
  <title>Draggable a.png</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: sans-serif;
    }

    h1 {
      text-align: center;
      margin: 20px 0;
    }

    #draggable {
      position: absolute;
      top: 150px;
      left: 100px;
      width: 150px;
      height: 150px;
      cursor: move;
      user-select: none;
    }

    #rectangle {
      position: absolute;
      top: 300px; /* Initially placed below the "a" image */
      left: -10%; /* Position slightly to the left for 120% width */
      width: 120%; /* 120% of the screen width */
      height: 100px; /* Adjust the height as needed */
      background-color: black;
      color: white;
      font-size: 16px;
      padding: 10px;
      border: none;
      resize: none; /* Disable resizing */
    }
  </style>
</head>
<body>
  <h1>JitterCode V.1.0.0-Epsilon</h1>

  <img id="draggable" src="a.png" alt="a">
  <textarea id="rectangle"></textarea> <!-- The rectangle is now a textarea -->

  <script>
    const drag = document.getElementById("draggable");
    const rect = document.getElementById("rectangle");

    let isDragging = false;
    let offsetX, offsetY;

    // Mouse events for "a" image
    drag.addEventListener('mousedown', function (e) {
      isDragging = true;
      offsetX = e.clientX - drag.offsetLeft;
      offsetY = e.clientY - drag.offsetTop;
      e.preventDefault();
    });

    document.addEventListener('mousemove', function (e) {
      if (isDragging) {
        drag.style.left = e.clientX - offsetX + 'px';
        drag.style.top = e.clientY - offsetY + 'px';
      }
    });

    document.addEventListener('mouseup', function () {
      isDragging = false;
    });

    // Touch events for mobile devices (Android, iOS, etc.)
    drag.addEventListener('touchstart', function (e) {
      isDragging = true;
      offsetX = e.touches[0].clientX - drag.offsetLeft;
      offsetY = e.touches[0].clientY - drag.offsetTop;
      e.preventDefault();
    });

    document.addEventListener('touchmove', function (e) {
      if (isDragging) {
        drag.style.left = e.touches[0].clientX - offsetX + 'px';
        drag.style.top = e.touches[0].clientY - offsetY + 'px';
      }
    });

    document.addEventListener('touchend', function () {
      isDragging = false;
    });
  </script>
</body>
</html>
